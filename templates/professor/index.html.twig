{% extends 'base.html.twig' %}

{% block title %}Cadastro de Professor{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="mt-3 mb-3">Cadastro de Professor</h2>

        {% for message in app.flashes('sucesso') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% if errors %}
            <ul class="alert alert-danger">
                {% for error in errors %}
                    <li>{{ error.message }}</li>
                {% endfor %}
            </ul>
        {% endif %}

        <form action="{{ path('create_professor') }}" method="post">
            <div class="form-group">
                <label for="nome">Nome</label>
                <input type="text" name="nome" id="nome" class="form-control">
            </div>

            <div class="form-group">
                <label for="idade">Idade</label>
                <input type="text" name="idade" id="idade" class="form-control">
            </div>

            <div class="form-group">
                <label for="matricula">Matr√≠cula</label>
                <input type="text" name="matricula" id="matricula">
            </div>

            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" id="ativo" name="ativo">
                <label class="form-check-label" for="ativo">Ativo</label>
            </div>

            <button type="submit" class="btn btn-success">Enviar</button>
        </form>
    </div>
{% endblock %}
