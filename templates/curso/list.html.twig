{% extends 'base.html.twig' %}

{% block body %}
    <h2>Lista de cursos</h2>
    {% for message in app.flashes('sucesso') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <a href="{{ path('curso') }}" class="btn btn-success mb-3">Novo</a>
    <table class="table table-striped table-sm">
        <tbody>
        <tr>
            <td>#</td>
            <td>Nome</td>
            <td>Horas</td>
            <td>Ativo</td>
            <td>Ações</td>
        </tr>
        {% for curso in cursos %}
            <tr>
                <td>{{ curso.id }}</td>
                <td>{{ curso.nome }}</td>
                <td>{{ curso.horas }}</td>
                <td>{{ curso.ativo ? 'Sim' : 'Não' }}</td>
                <td><a href="{{ path('curso_edit', { id: curso.id } ) }}" class="btn btn-info">Editar</a>
                    <a href="{{ path('curso_delete', { id: curso.id } ) }}" class="btn btn-danger">Excluir</a> </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block title %}

{% endblock %}

