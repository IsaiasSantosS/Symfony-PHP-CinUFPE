{% extends 'base.html.twig' %}

{% block title %}Aluno index{% endblock %}

{% block body %}
    <h1>Aluno index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Cidade</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for aluno in alunos %}
            <tr>
                <td>{{ aluno.id }}</td>
                <td>{{ aluno.nome }}</td>
                <td>{{ aluno.cidade }}</td>
                <td>
                    <a href="{{ path('aluno_show', {'id': aluno.id}) }}" class="btn btn-info">show</a>
